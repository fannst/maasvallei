<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda</title>
</head>
<body>
    <%- include ('../includes/header.ejs') %>

    <ul>
        <li>
            <a href="/agenda/schedule">Voeg item toe</a>
        </li>
    </ul>

    <ul>
        <% items.forEach (item => { %>
            <li>
                <p>
                    <strong><%= item.name %></strong>
                    <br />
                    <em><%= item.time.toString () %></em>
                    <br />
                    <small><%= item.description %></small>
                </p>
                <% if (!item.completed) { %>
                    <a href="/agenda/complete/<%= item._id %>">Rond af</a>
                <% } else { %>
                    <small>Afgerond!</small>    
                <% } %>
                <br />
                <a href="/agenda/remove/<%= item._id %>">Verwijder</a>           
            </li>
        <% }); %>
    </ul>
</body>
</html>